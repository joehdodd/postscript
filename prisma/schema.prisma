// Prisma schema for journaling prompts app

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  frequency String   // e.g., 'daily', 'weekly'
  prompts   Prompt[]
  entries   Entry[]
}

model Prompt {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  sentAt    DateTime?
  frequency String   // e.g., 'daily', 'weekly'
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  entries   Entry[]
  isOpen    Boolean  @default(true)
}

model Entry {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  userId    String
  promptId  String
  user      User     @relation(fields: [userId], references: [id])
  prompt    Prompt   @relation(fields: [promptId], references: [id])
}
